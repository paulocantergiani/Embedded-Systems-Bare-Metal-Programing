#include <stm32f411xe.h>
#include <stdio.h>
#include "uart.h"
#include "adxl345.h"

int16_t t, x, y, z;
float xg, yg, zg;
extern uint8_t data_rec[6];

int main(void)
{
	adxl_init();

    while (1)
    {
    	adxl_read_values(DATA_START_ADDR);

    	x = ((data_rec[1] << 0) | data_rec[0]);
    	y = ((data_rec[3] << 0) | data_rec[2]);
    	z = ((data_rec[5] << 0) | data_rec[4]);

    	xg = x * FOUR_G;
    	yg = y * FOUR_G;
    	zg = z * FOUR_G;
    }
}
